## Incoming
set imap_user = malfatti@disroot.org
set folder = imaps://"$imap_user"/
set spoolfile = +INBOX
set postponed = +Drafts
set mbox      = +Archive

## Outgoing
set realname = 'T Malfatti'
set from = $imap_user
set smtp_url = smtp://"$imap_user":587
#set ssl_force_tls = yes
set ssl_starttls
set record = +Sent

## Set folders
unmailboxes *
mailboxes =Inbox =Archive =Drafts =Junk =Sent =Trash =Github =UFRN =Shopping =Bills =Queue

## Specific shortcuts
macro index I "<save-message>+INBOX <enter>" "Move email to inbox"
macro index D "<save-message>+Trash <enter>" "Delete email"
macro index S "<save-message>+Junk <enter>" "Mark email as spam"
macro index A "<save-message>+Archive <enter>" "Archive email"

## Mutt
color status red default
#color indicator cyan black
account-hook $folder "set imap_user=malfatti@disroot.org"
