## Set Caca driver                                                              
export CACA_DRIVER=ncurses                                                      
                                                                                
## Set Qt5 theme                                                                
#export QT_STYLE_OVERRIDE=gtk                                                   
export QT_QPA_PLATFORMTHEME=qt5ct                                               
                                                                                
## Set perl paths                                                               
export PERL5LIB="$HOME/.local/lib64/perl/"                             
                                                                                
## set COWPATH so it includes user's cows                                       
export COWPATH="/usr/share/cowsay/cows"                                         
if [ -d "$HOME/.config/CowFiles" ] ; then                                       
    COWPATH="/usr/share/cowsay-3.03/cows:$HOME/.config/CowFiles"                
fi                                                                              

## Set R paths                                                                  
export R_LIBS_USER=~/.local/lib64/R 

## Set Scripts path                                                             
export GITPATH=~/Software/Git
export SCRIPTSPATH=$GITPATH/Malfatti/SciScripts                           
export DATAPATH=~/Documents/PhD/Data                                            
export DOTPATH=$GITPATH/Malfatti/DotFiles
export NEBULAPATH=~/Nebula                                                      
                                                                                
## Set Wine                                                                     
export WINEPATH=$HOME/Software/Wine                                             
export WINEDLLOVERRIDES='winemenubuilder.exe=d'

## Set Neuron
export IV=$HOME/Software/Programs/Neuron/iv
export N=$HOME/Software/Programs/Neuron/nrn
export CPU=x86_64
export PATH="$IV/$CPU/bin:$N/$CPU/bin:$PATH"

## Set mednafen fullscreen
export SDL_VIDEO_FULLSCREEN_DISPLAY=0
export SDL_VIDEO_FULLSCREEN_HEAD=0

## Set config path
export XDG_CONFIG_HOME="$HOME/.config"

