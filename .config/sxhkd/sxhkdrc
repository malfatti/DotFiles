## === Power
XF86Sleep
    bash $SCRIPTSPATH/Bash/Power/GoToSleep.sh

## === Applications
# close and kill
super + {_,shift + }F4
	bspc node -{c,k}

# terminal emulator
super + F1
    urxvt
	#st

# screenshots
Print
    maim ~/Images/Screenshots/Screenshot_$(date +%Y%m%d-%H%M%S)_Screen.png

super + Print
    maim -i $(xdotool getactivewindow) ~/Images/Screenshots/Screenshot_$(date +%Y%m%d-%H%M%S)_Window.png

ctrl + super + Print
    maim -s -c 1,0,0,0.6 ~/Images/Screenshots/Screenshot_$(date +%Y%m%d-%H%M%S)_Selection.png


## === Audio
# Out
XF86AudioRaiseVolume
    bash $SCRIPTSPATH/Bash/Audio/ALSA/VolControl.sh up > /dev/null

{_,super +} XF86AudioLowerVolume
    bash $SCRIPTSPATH/Bash/Audio/ALSA/VolControl.sh {down,toggle} > /dev/null

# In
shift + XF86AudioRaiseVolume
    amixer sset Capture 5%+ > /dev/null

shift + XF86AudioLowerVolume
    amixer sset Capture 5%- > /dev/null

shift + super + XF86AudioLowerVolume
    amixer sset Capture,0 toggle /dev/null


## === Video
# invert screen color
super + i
    xcalib -i -a

# Brightness
{XF86MonBrightnessUp,XF86MonBrightnessDown}
    xbacklight -{inc,dec} 5

# Toggle Displays
super + p
    bash $SCRIPTSPATH/Bash/Video/DisplayToggle.sh &>> /dev/null

# Lock
alt + ctrl + super + l
    slock


## === BSpWM and Sxhkd
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send "Sxhkd configuration reloaded"

# quit bspwm normally
alt + super + Escape
	bspc quit

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# switch node mode (auto, manual)
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused


## === Focus and move windows (nodes)
# swap the current node and the biggest node
super + b
	bspc node -s biggest.local

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# focus/shift the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# cycle focus through local/all nodes
alt + {_,shift + }{_,ctrl +}Tab
	bspc node -f {next,prev}{.local,_}

# cycle nodes
#alt + {_,shift + }c
#	bspc node -f {next,prev}
#    bspc node @/ -C {forward,backward}
#    bspc node @/ -f {next,prev}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
#super + {o,n}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# focus or send to the given desktop
ctrl + super + {_,alt + }{t,y,u,g,h,j,b,n,m,k}
    bspc {desktop,node -d} '^{1-9,10}' -f

# preselect the direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
alt + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand a window by moving one of its side outward
alt + super + {h,j,k,l}
	bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 10 0}

# contract a window by moving one of its side inward
alt + shift+ super + {h,j,k,l}
	bspc node -z {right -10 0,top 0 10,bottom 0 -10,left 10 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-10 0,0 10,0 -10,10 0}

